    <div class="container">
      <a class="navbar-brand js-scroll-trigger" href="#page-top">Copyright Protection - 문화체육관광부 특수사법경찰</a>
      <button
        class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded"
        type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
        aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <!-- <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">Portfolio</a></li> -->
          <!-- <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">Contact</a></li> -->
          <% if (account === 'admin') { %>
            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" data-toggle="modal" data-target="#loginModal">Login</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Masthead-->
  <header class="masthead bg-danger text-white text-center">
    <div class="container d-flex align-items-center flex-column">
      <!-- Masthead Avatar Image-->
      <img class="masthead-avatar mb-5" src="/images/avataaars.svg" alt="" />
      <!-- Masthead Heading-->
      <h1 class="masthead-heading text-uppercase mb-0">Copyright Protection</h1>
      <!-- Icon Divider-->
      <div class="divider-custom divider-light">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
      </div>
      <!-- Masthead Subheading-->
      <p class="masthead-subheading font-weight-light mb-0">문화체육관광부 특수사법경찰 앱</p>
    </div>
  </header>
  <!-- Portfolio Section-->
  <section class="page-section portfolio" id="portfolio">
    <div class="container">
      <!-- Portfolio Section Heading-->
      <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Functions</h2>
      <!-- Icon Divider-->
      <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
      </div>
      <!-- Portfolio Grid Items-->
      <div class="row justify-content-center">
        <!-- Portfolio Item 1-->
        <div class="col-md-6 col-lg-6 mb-5">
          <div class="portfolio-item mx-auto" id="btnQueryAllReports" data-toggle="modal" data-target="#queryAllReports">
            <div
              class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
              <div class="portfolio-item-caption-content text-center text-white">신고 내역 전체 조회</div>
            </div>
            <img class="img-fluid" src="/images/portfolio/safe.png" alt="" />
          </div>
        </div>
        <!-- Portfolio Item 2-->
        <div class="col-md-6 col-lg-6 mb-5">
          <div class="portfolio-item mx-auto" id="btnQueryReport" data-toggle="modal" data-target="#queryReport">
            <div
              class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
              <div class="portfolio-item-caption-content text-center text-white">신고 내역 조회</div>
            </div>
            <img class="img-fluid" src="/images/portfolio/submarine.png" alt="" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Copyright Section-->
  <div class="copyright py-4 text-center text-white">
    <div class="container"><small>Copyright © Your Website 2020</small></div>
  </div>
  <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
  <div class="scroll-to-top d-lg-none position-fixed">
    <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i
        class="fa fa-chevron-up"></i></a>
  </div>
  <!-- Portfolio Modals-->
  <!-- Portfolio Modal 1-->
  <div class="portfolio-modal modal fade" id="queryAllReports" tabindex="-1" role="dialog"
    aria-labelledby="queryAllReportsLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"><i class="fas fa-times"></i></span>
        </button>
        <div class="modal-body text-center">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-12">
                <!-- Portfolio Modal - Title-->
                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"
                  id="queryAllReportsLabel">모든 신고내역 조회</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                  <div class="divider-custom-line"></div>
                  <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                  <div class="divider-custom-line"></div>
                </div>

                <!-- Result Area -->
                <div class="text-center">
                  <p id="result"></p>
                  <p id="message"></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Portfolio Modal 2-->
  <div class="portfolio-modal modal fade" id="queryReport" tabindex="-1" role="dialog"
    aria-labelledby="queryReportLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"><i class="fas fa-times"></i></span>
        </button>
        <div class="modal-body text-center">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-12">
                <!-- Portfolio Modal - Title-->
                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"
                  id="queryReportLabel">신고 데이터 조회</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                  <div class="divider-custom-line"></div>
                  <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                  <div class="divider-custom-line"></div>
                </div>
                <!-- Query Report InputBox, Button -->
                <div class="control-group text-center">
                  <div class="form-group floating-label-form-group controls mb-5 pb-2">
                    <label>신고 번호</label>
                    <input class="form-control text-center" id="txtReportNo" type="text"
                      placeholder="신고 번호" required="required"
                      data-validation-required-message="Please enter report number." />
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="form-group">
                  <button class="btn btn-primary btn-xl" id="btnQuery">조회하기</button>
                </div>
                <!-- Result Area -->
                <div class="text-center">
                  <p id="result"></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Login Modal -->
  <div class="portfolio-modal modal fade" id="loginModal" tabindex="-1" role="dialog"
    aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"><i class="fas fa-times"></i></span>
        </button>
        <div class="modal-body text-center">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <!-- Portfolio Modal - Title-->
                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"
                  id="loginModalLabel">Login</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                  <div class="divider-custom-line"></div>
                  <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                  <div class="divider-custom-line"></div>
                </div>
                <div class="control-group text-center">
                  <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>ID</label>
                    <input class="form-control text-center" id="txtID" type="text"
                      placeholder="ID" required="required"
                      data-validation-required-message="Please enter admin id." />
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="control-group text-center">
                  <div class="form-group floating-label-form-group controls mb-5 pb-2">
                    <label>Password</label>
                    <input class="form-control text-center" id="txtPW" type="text"
                      placeholder="Password" required="required"
                      data-validation-required-message="Please enter admin password." />
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="pb-5" id="alertLogin"></div>
                <div class="form-group">
                  <button class="btn btn-primary btn-xl" id="btnLogin">Login</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap core JS-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Third party plugin JS-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
  <!-- Core theme JS-->
  <script src="/javascripts/scripts.js"></script>
  <script>
    $(function () {
      // 모든 신고내역 조회
      $('#btnQueryAllReports').click(async () => {
        const result = await fetch('/api/reports');
        const json = await result.json();
        const account = $('#account').val();
        let table = '<table class="table-report"><thead><tr><th>신고 ID</th><th>URL</th><th>홈페이지 이름</th><th>저작물 이름</th><th>저작물 유형</th><th>저작권자 이름</th><th>게시자</th><th>신고자 Email</th><th>날짜</th><th>침해 형태</th><th>유사도</th><th>침해 여부</th></tr></thead><tbody>';
        for(let i = 0; i < json.length; i++) {
          table += `<tr id="${i}">`;
          table += `<td>${json[i].Key}</td>`;
          table += `<td>${json[i].Record.url}</td>`;
          table += `<td>${json[i].Record.site}</td>`;
          table += `<td>${json[i].Record.title}</td>`;
          table += `<td>${json[i].Record.contentType}</td>`;
          table += `<td>${json[i].Record.author}</td>`;
          table += `<td>${json[i].Record.pirate}</td>`;
          table += `<td>${json[i].Record.reporterEmail}</td>`;
          table += `<td>${json[i].Record.date}</td>`;
          table += `<td>${json[i].Record.form}</td>`;
          table += `<td>${json[i].Record.similarity} %</td>`;
          if(account === 'admin') {
            json[i].Record.status === 'Pending' ? table += `<td><a id="Proceeding" class="badge badge-danger">수사 착수</a></td>` : 
            json[i].Record.status === 'Proceeding' ? table += `<td><a id="Completed" class="badge badge-success">수사 완료</a></td>` : 
            table += `<td>${json[i].Record.status}</td>`
          } else table += `<td>${json[i].Record.status}</td>`;
          table += '</tr>';
        }
        table += '</tbody></table>'
        $('#queryAllReports #result').html(table);

        $(document).on('click', '#queryAllReports table td a', { reports: json }, async (e) => {
          $('#queryAllReports #message').html('결과를 기다리는 중입니다...');
          const reports = e.data.reports;
          const index = $(e.target).parent().parent().attr('id');
          const status = $(e.target).attr('id');
          const data = {
            reportID: reports[index].Key,
            status: status
          }
          const result = await fetch(`/api/reports`, {
            method: 'PUT',
            body: JSON.stringify({ ...data }),
            headers: { 'Content-Type': 'application/json' }
          });
          const json = await result.json();
          $('#queryAllReports #message').html(json.msg);
          const td = json.data === 'Proceeding'
          ? `<a id="Completed" class="badge badge-success">수사 완료</a>` : json.data;
          $(e.target).parent().html(td);
        });
      });
      
      // Highlight row
      $('.table-report tbody tr').hover(() => {
        $('.table-report tbody tr').removeClass('active-row');
        $(this).addClass('active-row');
      });

      // 신고 내역 조회
      $('#btnQueryReport').click(() => {
        $('#queryReport #txtReportNo').val('');
        $('#queryReport #result').html('');
      });

      $('#queryReport #btnQuery').click(async () => {
        const reportNo = $('#queryReport #txtReportNo').val();
        const account = $('#account').val();

        if(!reportNo) {
          $('#queryReport #result').html(`<font color="red">Please enter your report number.</font>`);
          return;
        }
        
        const result = await fetch(`/api/reports/${reportNo}`);

        if(!result.ok) {
          $('#queryReport #result').html(`<font color="red">Unable to query report with <b>${reportNo}</b>.</font>`);
          return;
        }

        const json = await result.json();
        
        let table = '<table class="table-report"><thead><tr><th>신고 ID</th><th>URL</th><th>홈페이지 이름</th><th>저작물 이름</th><th>저작물 유형</th><th>저작권자 이름</th><th>게시자</th><th>신고자 Email</th><th>날짜</th><th>침해 형태</th><th>유사도</th><th>침해 여부</th></tr></thead><tbody>';
        table += '<tr>';
        table += `<td>${json.id}</td>`;
        table += `<td>${json.url}</td>`;
        table += `<td>${json.site}</td>`;
        table += `<td>${json.title}</td>`;
        table += `<td>${json.contentType}</td>`;
        table += `<td>${json.author}</td>`;
        table += `<td>${json.pirate}</td>`;
        table += `<td>${json.reporterEmail}</td>`;
        table += `<td>${json.date}</td>`;
        table += `<td>${json.form}</td>`;
        table += `<td>${json.similarity} %</td>`;
        if(account === 'admin') {
          json.status === 'Pending' ? table += `<td><a id="Proceeding" class="badge badge-danger">수사 착수</a></td>` : 
          json.status === 'Proceeding' ? table += `<td><a id="Completed" class="badge badge-success">수사 완료</a></td>` : 
          table += `<td>${json.status}</td>`
        } else table += `<td>${json.status}</td>`;
        table += '</tr>';
        table += '</tbody></table>'
        $('#queryReport #result').html(table);
        // $('#resultQueryReport').html(`Unable to query report with ${reportNo}`);
      });

      // 로그인
      $('#btnLogin').click(async () => {
        const id = $('#txtID').val();
        const pw = $('#txtPW').val();
        const result = await fetch(`/login`, {
          method: 'POST',
          body: JSON.stringify({ id: id, pw: pw }),
          headers: { 'Content-Type': 'application/json' }
        });
        const json = await result.json();
        if(!json.ok) {
          $('#alertLogin').html(`<font color="red">${json.msg}</font>`);
          return;
        }
        location.replace('/');
      });
    });
  </script>
</body>

</html>